{
  "name": "configure-aliyun-credentials",
  "description": "A GitHub Action to configure Alibaba Cloud credentials",
  "version": "1.0.7",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build-main": "ncc build src/main.ts -o dist/main --source-map --license licenses.txt",
    "build-cleanup": "ncc build src/cleanup.ts -o dist/cleanup --source-map --license licenses.txt",
    "build": "npm run typecheck && npm run build-main && npm run build-cleanup"
  },
  "keywords": [
    "Alibaba Cloud",
    "aliyun",
    "credentials",
    "OpenAPI"
  ],
  "author": {
    "name": "Alibaba Cloud OpenAPI Team",
    "url": "https://www.aliyun.com",
    "organization": true
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@alicloud/credentials": "^2.4.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vercel/ncc": "^0.38.3",
    "typescript": "^5.7.0"
  }
}
